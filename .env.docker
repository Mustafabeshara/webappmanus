# Docker Local Development Environment
# Copy this file to .env when using Docker

# MySQL Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=moh_tender_db
MYSQL_USER=moh_user
MYSQL_PASSWORD=moh_password

# Database URL (for the app)
DATABASE_URL=mysql://moh_user:moh_password@mysql:3306/moh_tender_db

# Authentication
VITE_APP_ID=local-docker-dev
JWT_SECRET=local-development-secret-key-min-32-characters-long
OAUTH_SERVER_URL=https://oauth.manus.app
OWNER_OPEN_ID=local-dev-owner

# Server Configuration
PORT=3000
NODE_ENV=development

# Storage
STORAGE_DIR=/app/uploads
BASE_URL=http://localhost:3000

# Optional - Analytics (disabled for local dev)
VITE_ANALYTICS_ENDPOINT=
VITE_ANALYTICS_WEBSITE_ID=
