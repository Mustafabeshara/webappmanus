# Production Environment Configuration
# Copy this file to .env.production and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MYSQL_ROOT_PASSWORD=your-secure-root-password-here
MYSQL_DATABASE=moh_tender_db
MYSQL_USER=moh_user
MYSQL_PASSWORD=your-secure-db-password-here

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# JWT Secret - MUST be at least 32 characters, use a random string
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters

# Application ID
VITE_APP_ID=moh-tender-production

# OAuth Configuration
OAUTH_SERVER_URL=https://oauth.manus.app
OWNER_OPEN_ID=your-owner-open-id

# ===========================================
# DOMAIN & URL CONFIGURATION
# ===========================================
# Your production domain (without https://)
DOMAIN=yourdomain.com

# Base URL for the application
BASE_URL=https://yourdomain.com

# ===========================================
# SSL CERTIFICATE PATHS (for nginx)
# ===========================================
# If using Let's Encrypt, these will be:
# /etc/letsencrypt/live/yourdomain.com/fullchain.pem
# /etc/letsencrypt/live/yourdomain.com/privkey.pem

# ===========================================
# OPTIONAL ANALYTICS
# ===========================================
VITE_ANALYTICS_ENDPOINT=
VITE_ANALYTICS_WEBSITE_ID=
